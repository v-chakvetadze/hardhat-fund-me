{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
